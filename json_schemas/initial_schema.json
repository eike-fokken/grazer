{
  "$id": "https://raw.githubusercontent.com/eike-fokken/grazer/blob/master/json_schemas/initial_schema.json",
  "$schema": "http://json-schema.org/draft-07/schema",
  "title": "Initial Data",
  "description": "Situation at the starting time",
  "type": "object",
  "required": ["initialvalues"],
  "properties": {
    "initialvalues":{
      "type": "array",
      "items":{
        "id": {"type": "string"},
        "data":{
          "type": "array",
          "items": {
            "x": {"type": "numeric"},
            "values": {"type": "array", "items": {"type": "numeric"}}
          }
        }
      }
    }
  }
}